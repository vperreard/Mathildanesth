{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "commonjs",
        "types": [
            "jest",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "jest.setup.js",
        "src/tests/setup/setup.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}