{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": [
            "jest",
            "@testing-library/jest-dom"
        ],
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/types/*.d.ts",
        "jest.setup.js",
        "jest.polyfills.js",
        "src/tests/setup/setup.ts"
    ],
    "exclude": [
        "node_modules",
        "cypress",
        "**/*.cy.{ts,tsx}"
    ]
}