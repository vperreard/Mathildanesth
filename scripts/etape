#!/bin/bash
# scripts/etape - Wrapper simple pour point d'Ã©tape

# Usage:
#   ./scripts/etape              # Point d'Ã©tape complet
#   ./scripts/etape --quick      # Version rapide
#   ./scripts/etape --roadmap    # Focus sur roadmap/TODO

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

case "${1:-}" in
    --quick)
        echo "ðŸš€ Point d'Ã©tape rapide..."
        echo "========================="
        echo "ðŸ“¦ Routes API: $(find src/app/api -name "route.ts" 2>/dev/null | wc -l)"
        echo "ðŸ“ TODO/FIXME: $(grep -r "TODO\|FIXME" src --include="*.ts" --include="*.tsx" 2>/dev/null | wc -l)"
        echo "ðŸ§ª Tests: $(find src -name "*.test.ts" -o -name "*.test.tsx" 2>/dev/null | wc -l)"
        echo "âš ï¸  @ts-ignore: $(grep -r "@ts-ignore" src --include="*.ts" --include="*.tsx" 2>/dev/null | wc -l)"
        echo ""
        echo "ðŸ’¡ Pour un point d'Ã©tape complet: ./scripts/etape"
        ;;
    --roadmap)
        echo "ðŸ—ºï¸  Analyse roadmap et TODO..."
        echo "================================"
        if [ -f "docs/04_roadmap/URGENT_TODO_ACTION_PLAN.md" ]; then
            echo "ðŸš¨ Plan d'action urgent dÃ©tectÃ©"
            grep -E "Phase|TODO|URGENT" docs/04_roadmap/URGENT_TODO_ACTION_PLAN.md | head -10
        fi
        echo ""
        echo "ðŸ“‹ TODO rÃ©cents dans le code:"
        grep -r "TODO\|FIXME" src --include="*.ts" --include="*.tsx" 2>/dev/null | head -5
        ;;
    *)
        echo "ðŸ“Š Lancement du point d'Ã©tape complet..."
        echo ""
        "$SCRIPT_DIR/point-etape.sh"
        ;;
esac 