{
    "name": "MATHILDA - Gestion Hospitalière",
    "short_name": "MATHILDA",
    "description": "Système de gestion des plannings et congés pour établissements de santé",
    "version": "1.0.0",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#2563eb",
    "orientation": "portrait-primary",
    "scope": "/",
    "lang": "fr",
    "dir": "ltr",
    "categories": [
        "medical",
        "productivity",
        "business",
        "utilities"
    ],
    "icons": [
        {
            "src": "/icons/icon-72x72.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-96x96.png",
            "sizes": "96x96",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-128x128.png",
            "sizes": "128x128",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-144x144.png",
            "sizes": "144x144",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-152x152.png",
            "sizes": "152x152",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-384x384.png",
            "sizes": "384x384",
            "type": "image/png",
            "purpose": "maskable any"
        },
        {
            "src": "/icons/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable any"
        }
    ],
    "shortcuts": [
        {
            "name": "Planning",
            "short_name": "Planning",
            "description": "Accéder au planning",
            "url": "/planning",
            "icons": [
                {
                    "src": "/icons/shortcut-planning.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Congés",
            "short_name": "Congés",
            "description": "Gérer les congés",
            "url": "/conges",
            "icons": [
                {
                    "src": "/icons/shortcut-leaves.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Bloc Opératoire",
            "short_name": "Bloc Op",
            "description": "Accéder au bloc opératoire",
            "url": "/bloc-operatoire",
            "icons": [
                {
                    "src": "/icons/shortcut-bloc.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Notifications",
            "short_name": "Notifs",
            "description": "Voir les notifications",
            "url": "/notifications",
            "icons": [
                {
                    "src": "/icons/shortcut-notifications.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        }
    ],
    "prefer_related_applications": false,
    "related_applications": [
        {
            "platform": "webapp",
            "url": "https://mathilda.app/manifest.json"
        }
    ],
    "edge_side_includes": true,
    "display_override": [
        "window-controls-overlay",
        "standalone",
        "minimal-ui",
        "browser"
    ],
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "protocol_handlers": [
        {
            "protocol": "mathilda",
            "url": "/protocol-handler?url=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/import",
            "accept": {
                "application/vnd.ms-excel": [
                    ".xls"
                ],
                "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [
                    ".xlsx"
                ],
                "text/csv": [
                    ".csv"
                ]
            }
        }
    ],
    "screenshots": [
        {
            "src": "/screenshots/desktop-home.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Page d'accueil MATHILDA"
        },
        {
            "src": "/screenshots/mobile-planning.png",
            "sizes": "390x844",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Planning mobile"
        },
        {
            "src": "/screenshots/desktop-planning.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Interface de planning"
        },
        {
            "src": "/screenshots/mobile-leaves.png",
            "sizes": "390x844",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Gestion des congés mobile"
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "files",
                    "accept": [
                        "application/vnd.ms-excel",
                        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
                        "text/csv",
                        "application/pdf"
                    ]
                }
            ]
        }
    },
    "edge_side_panel": {
        "preferred_width": 400
    },
    "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
    "permissions": [
        "notifications",
        "background-sync",
        "persistent-storage"
    ],
    "features": [
        "cross-origin-isolated"
    ]
}