{
  "name": "mathildanesth",
  "description": "Medical planning application for anesthesia teams",
  "categories": {
    "tests": {
      "name": "Tests & Quality",
      "commands": {
        "validate": "npm run validate",
        "test:fast": "npm run test:fast",
        "test:bulletproof": "npm run test:bulletproof",
        "test:coverage": "npm run test:coverage"
      }
    },
    "development": {
      "name": "Development",
      "commands": {
        "dev": "npm run dev",
        "build": "npm run build",
        "etape": "npm run etape"
      }
    },
    "database": {
      "name": "Database",
      "commands": {
        "migrate": "npx prisma migrate dev",
        "generate": "npx prisma generate",
        "studio": "npx prisma studio",
        "seed": "npm run db:seed"
      }
    },
    "quality": {
      "name": "Code Quality",
      "commands": {
        "lint": "npm run lint",
        "typecheck": "npm run typecheck",
        "audit": "./scripts/claude-auto.sh audit"
      }
    }
  },
  "workflows": {
    "pre-commit": ["test:fast", "lint"],
    "full-check": ["validate"],
    "quick-dev": ["test:fast", "lint"]
  }
}